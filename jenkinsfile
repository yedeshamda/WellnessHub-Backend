pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    bat  'mvn clean package'
                }
            }
        }
        failure {
            echo ' Échec du build, vérifie les logs.'
        }
    }
}
